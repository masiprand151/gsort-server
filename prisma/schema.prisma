generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  GUEST
  USER
  ADMIN
}

model User {
  id       Int     @id @default(autoincrement())
  uuid     String  @unique @default(uuid())
  username String  @unique
  email    String? @unique
  password String?
  role     Role    @default(GUEST)
  deviceId String? @unique

  avatar    String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments Comment[]
  books    Book[] // relasi existing
  follows  Follow[]
  history  WatchHistory[]
  likes    VideoLike[]
}

model Follow {
  id Int @id @default(autoincrement())

  userId   Int
  seriesId Int

  user   User   @relation(fields: [userId], references: [id])
  series Series @relation(fields: [seriesId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, seriesId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
  createdAt DateTime @default(now())
}

model Book {
  id             Int     @id @default(autoincrement())
  bookId         String  @unique
  bookName       String
  description    String  @db.Text
  subDescription String? @db.Text

  isHot        Boolean @default(false)
  isExclusive  Boolean @default(false)
  language     String?
  totalChapter Int?
  thumbUrl     String? @db.Text

  series Series?

  tags Tag[] // implicit many-to-many

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    User[]
  comments Comment[]
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] // implicit many-to-many
}

model Series {
  id       Int     @id @default(autoincrement())
  seriesId String  @unique
  title    String
  intro    String? @db.Text

  cover        String? @db.Text
  episodeCount Int?

  followed      Boolean @default(false)
  followedCount Int?

  book    Book @relation(fields: [bookRef], references: [id])
  bookRef Int  @unique

  videos    Video[]
  followers Follow[]
}

model WatchHistory {
  id Int @id @default(autoincrement())

  userId  Int
  videoId Int

  progress  Int      @default(0)
  watchedAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  video Video @relation(fields: [videoId], references: [id])

  @@unique([userId, videoId])
}

model Video {
  id      Int    @id @default(autoincrement())
  videoId String @unique

  index Int?
  title String? @db.Text

  duration   Int?
  mainUrl    String  @db.Text
  backupUrl  String? @db.Text
  resolution Json?
  disclaimer Json?

  cover        String? @db.Text
  episodeCover String? @db.Text

  videoWidth  Int?
  videoHeight Int?
  expireTime  BigInt?

  series    Series         @relation(fields: [seriesRef], references: [id])
  seriesRef Int
  history   WatchHistory[]
  likes     VideoLike[]
}

model VideoLike {
  id Int @id @default(autoincrement())

  userId  Int
  videoId Int

  user  User  @relation(fields: [userId], references: [id])
  video Video @relation(fields: [videoId], references: [id])

  createdAt DateTime @default(now())

  @@unique([userId, videoId])
}
